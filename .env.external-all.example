# Example Environment Variables for docker-compose.external-all.yml
# Copy this file to .env and update the values

# Application Configuration
# APP_URL should include the port if not using default 80/443
APP_URL=https://m3uedit.pixelnode.ovh
APP_PORT=443

SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# PostgreSQL Database Configuration
PG_DATABASE=m3ue
PG_USER=m3ue
PG_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_HOST=redis

# M3U Proxy Configuration
M3U_PROXY_PORT=38085
M3U_PROXY_HOST=m3u-proxy


# Nginx Configuration
NGINX_PORT=8080
NGINX_SSL_PORT=443  # Uncomment for HTTPS

# Build Configuration (optional)
# IMAGE_TAG=latest
# GIT_BRANCH=main
# GIT_COMMIT=HEAD
# GIT_TAG=latest

# Generate secure passwords and tokens:
# For PG_PASSWORD: openssl rand -base64 32
# For M3U_PROXY_TOKEN: openssl rand -hex 32
